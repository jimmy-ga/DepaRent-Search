!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %title DepaRent-Search
    / Bootstrap core CSS
    %link{href: "css/bootstrap.css", rel: "stylesheet"}/
    / JQuery para inputs numeros
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "jquery.spinner.js"}
    %link{href: "bootstrap-spinner.css", rel: "stylesheet"}/
    / Add custom CSS here
    %link{href: "css/stylish-portfolio.css", rel: "stylesheet"}/
    %link{href: "font-awesome/css/font-awesome.min.css", rel: "stylesheet"}/
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300", rel: "stylesheet", type: "text/css"}/
  %body
    %nav.navbar.navbar-custom.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header.page-scroll
          %button.navbar-toggle{"data-target" => ".navbar-main-collapse", "data-toggle" => "collapse", type: "button"}
            %i.fa.fa-bars
          %a.navbar-brand{href: "#page-top",style: "color: #000;font-family: 'Open Sans', sans-serif;"}
            %span.light{style: "color: #000;"}
            %img{src: "#{imagen}", style:"width: 1.5em"} #{nombre}
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-right.navbar-main-collapse
          %ul.nav.navbar-nav
            / Hidden li included to remove active class from about link when scrolled up past about section
            %li.hidden
              %a{href: "/"}
            %li.page-scroll
              %a{href: "/inicio#agregar", style: "color: #000; font-size: 1.3em; font-family: 'Open Sans', sans-serif;"} Agregar
            %li.page-scroll
              %a{href: "/inicio#buscar", style: "color: #000; font-size: 1.3em; font-family: 'Open Sans', sans-serif;"} Buscar
            %li.page-scroll
              %a{href: "/logout", style: "color: #000; font-size: 1.3em; font-family: 'Open Sans', sans-serif;"} Cerrar sesión
        / /.navbar-collapse
      / /.container
    / Full Page Image Header Area
    #top.agregarApt
      .vert-text
        %h1{style: "font-family: 'Open Sans', sans-serif;"} Agregar un apartamento
        %h4 Texto de muestra, no sé que poner
        %br/
        %a.btn.btn-default.btn-md{href: "#about"} Llenar el formulario
    / /Full Page Image Header Area
    / Formulario de agregar apartamento
    #agregar.intro
      .container
        %h2.text-center Agregar un apartamento
        %br/
        %br/
        .row
          %form.container{action: "/agregarAparta", method: "post"}
            .row
              .col-md-6
                / <label for="username" class="control-label">label</label>
                %legend Titulo
                %input#titulo.form-control{name: "titulo", autofocus: "", placeholder: "Ingresa el titulo del anuncio", type: "text"}/
                %br/
                %legend Descripción
                %input.form-control{name: "descripcion", autofocus: "", id: "descripción", placeholder: "Ingresa la descripción del artículo", type: "text"}/
                %br/
                %legend Contacto
                %input#email1.form-control{name: "correo", autofocus: "", placeholder: "Ingresa tu e-mail", type: "email"}/
                %br/
                %input#email1.form-control{name: "numeroTelefono", autofocus: "", placeholder: "Ingresa tu número de teléfono", type: "tel"}/
                %br/
                %legend Caracteristicas
                %div
                  %label{for: "precio", placeholder: "Precio"} Precio
                  %input{name: "precioAparta", autofocus: "", id: "descripción", style: "float:right;", type: "number"}/
                  %br/
                  %br/
                  %label{for: "cuartos", placeholder: "Cuartos"} Cuartos
                  %input{name: "cuartosAparta",autofocus: "", id: "descripción", style: "float:right;", type: "number"}/
                  %br/
                  %br/
                  %label{for: "internet", placeholder: "internet"} Internet
                  %div{style: "float:right;"}
                    %select.form-control{ name: "internet",style: "height: 2em;"}
                      %option Si
                      %option No
                  %br/
                  %br/
                  %label{for: "cable", placeholder: "cable"} Cable
                  %div{style: "float:right;"}
                    %select.form-control{ name: "cable",style: "height: 2em;"}
                      %option Si
                      %option No
                  %br/
                  %br/
                  %label{for: "Comparte", placeholder: "Comparte"} Comparte cuarto?
                  %div{style: "float:right;"}
                    %select.form-control{ name: "comparte",style: "height: 2em;"}
                      %option Si
                      %option No
                  %br/
                  %br/
                  %div{style: "float:right;"}
                    %input{name: "Latitud", id: "Lat", type: "text", value: "latitud"}>/
                  %br/
                  %br/
                  %div{style: "float:right;"}
                    %input{name: "Longitud", id: "Long", type: "text", value: "longitud", readonly:"readonly"}>/
                  %br/
                  %br/
              .col-md-6
                / Mapa
                %legend Ubicación en el mapa
                #contact.map
                  %iframe{frameborder: "0", height: "100%", src: "mapaL",style: "border:0", width: "100%"}
            %input.btn{type: "submit"}/
    / /Formulario agregar contacto
    / Transición
    .callout
      .vert-text
    / /Transición
    / Buscar Apartamentos
    #buscar.intro
      .container
        %h2.text-center Buscar Apartamentos
        %br/
        %br/
        .row
          %h2.text-center
            %legend Buscar por caracteristicas
          %br/
          %br/
          .col-md-6
            %legend Buscar por precio
            %form{action: "buscarPrecio"}
              %input#buscCuartos.form-control{name: "precio", autofocus: "", placeholder: "Ingresa el precio máximo", style: "width: 70%", type: "number"}/
              %br/
              %input.btn{type: "submit"}/
          .col-md-6
            %legend Buscar por número de cuartos
            %form{action: "buscarNumCuartos"}
              %input#buscNumCuart.form-control{name: "cuartos",autofocus: "", placeholder: "Ingresa el número de cuartos que buscas", style: "width: 70%", type: "number"}/
              %br/
              %input.btn{type: "submit"}/
        .row
          .col-md-6
            %br/
            %br/
            %legend Buscas un cuarto con internet?
            %form{action: "buscarInternet"}
              %div{style: "float:center;"}
                %input{name: "internetCuarto", type: "radio", value: "si"}>/
                Si
                = succeed "No" do
                  %input{name: "internetCuarto", type: "radio", value: "no"}/
                %br/
                %br/
              %input.btn{type: "submit"}/
          .col-md-6
            %br/
            %br/
            %legend Buscas compartir un cuarto?
            %form{action: "buscarCompartido"}
              %div{style: "float:center;"}
                %input{name: "CuartoCompartido", type: "radio", value: "si"}>/
                Si
                = succeed "No" do
                  %input{name: "CuartoCompartido", type: "radio", value: "no"}/
                %br/
                %br/
              %input.btn{type: "submit"}/
        / /Buscar Apartamentos
        / Footer
        %footer
          .container
            .row
              .col-md-6.col-md-offset-3.text-center
                
                %hr/
                %p TI-3404 Lenguajes de programación, Instituto Tecnológico de Costa Rica
                %br
        / /Footer
        / JavaScript
        %script{src: "js/jquery-1.10.2.js"}
        %script{src: "js/bootstrap.js"}
        / Custom JavaScript for the Side Menu and Smooth Scrolling
        :javascript
          $("#menu-close").click(function(e) {
              e.preventDefault();
              $("#sidebar-wrapper").toggleClass("active");
          });
        :javascript
          $("#menu-toggle").click(function(e) {
              e.preventDefault();
              $("#sidebar-wrapper").toggleClass("active");
          });
        :javascript
          $(function() {
              $('a[href*=#]:not([href=#])').click(function() {
                  if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

                      var target = $(this.hash);
                      target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                      if (target.length) {
                          $('html,body').animate({
                              scrollTop: target.offset().top
                          }, 1000);
                          return false;
                      }
                  }
              });
          });
